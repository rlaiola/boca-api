{
  "name": "boca-api",
  "version": "2.0.0",
  "main": "index.js",
  "repository": "https://github.com/leodeorce/boca-api.git",
  "author": "Matheus Lenke <matheuslenke@gmail.com>",
  "contributors": [
    {
      "name": "Leonardo Deorce",
      "email": "leodeorce@gmail.com"
    }
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "docker:dev": "ts-node --transpile-only src/server.ts",
    "dev": "export $(grep '^[A-Z]' .env) && ts-node --transpile-only src/server.ts",
    "test:health": "sh ./test/api/healthcheck.sh",
    "test:api": "mocha -r ts-node/register './test/api/index.ts'",
    "test:purge": "bash ./test/api/purgedb.sh",
    "docker:up": "docker compose -f docker-compose-dev.yml up --build -d",
    "docker:down": "docker compose -f docker-compose-dev.yml down",
    "docker:prune": "echo 'y' | docker image prune",
    "docker:build": "docker build --progress=plain . 2>&1 | tee build.log",
    "test:docker:up": "docker compose -f docker-compose-test.yml up --build -d",
    "test:docker:down": "docker compose -f docker-compose-test.yml down -v",
    "docker:apilogs": "docker logs boca-api",
    "docker:dblogs": "docker logs boca-postgres",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "lint": "eslint --fix --ext .ts ."
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chai": "^4.3.6",
    "eslint": "^8.23.1",
    "mocha": "^10.0.0",
    "pg": "^8.7.1",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.3.9",
    "uuid": "^8.3.2",
    "winston": "^3.8.2"
  }
}
